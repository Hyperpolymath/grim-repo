{
  "name": "grimrepo-scripts",
  "version": "1.0.0",
  "description": "Modular audit-grade tooling for narratable, scaffolded, and legible repositories",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "repository",
    "audit",
    "scaffolding",
    "gitlab",
    "github",
    "bitbucket",
    "userscript",
    "rsr",
    "rhodium-standard"
  ],
  "author": "GrimRepo Contributors",
  "license": "(MIT AND Palimpsest-0.8)",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/extensions-library/monkey-scripts/grimrepo-scripts.git"
  },
  "bugs": {
    "url": "https://gitlab.com/extensions-library/monkey-scripts/grimrepo-scripts/-/issues"
  },
  "homepage": "https://grimrepo.dev",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "src",
    "LICENSE.txt",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
